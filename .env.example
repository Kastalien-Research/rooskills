# ================================================================
# ROOSKILLS ENVIRONMENT CONFIGURATION
# ================================================================
# Copy this file to .env and fill in your values
# All required fields are marked with [REQUIRED]
# DO NOT commit the .env file to version control

# ================================================================
# API KEYS [REQUIRED]
# ================================================================

# Firecrawl API Key [REQUIRED]
# Used for web scraping and content extraction
# Get your API key from: https://firecrawl.dev
# Example: fc_live_abc123def456
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Anthropic API Key [REQUIRED]
# Used for Claude AI model interactions
# Get your API key from: https://console.anthropic.com
# Example: sk-ant-api03-abc123def456
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Exa API Key [Optional]
# Used for ecosystem research and enhanced search capabilities
# Get your API key from: https://exa.ai
# Leave empty to disable Exa integration
EXA_API_KEY=your_exa_api_key_here

# ================================================================
# OPERATIONAL SETTINGS
# ================================================================

# Log Level [Optional, default: info]
# Options: debug, info, warn, error
# Use 'debug' for development, 'info' for production
LOG_LEVEL=info

# Request Timeout [Optional, default: 30000]
# Timeout in milliseconds for API requests
# Increase for slower networks or complex operations
TIMEOUT_MS=30000

# Maximum Retry Attempts [Optional, default: 3]
# Number of retry attempts for failed API requests
# Set to 0 to disable retries
MAX_RETRIES=3

# Retry Delay [Optional, default: 1000]
# Initial delay in milliseconds before first retry
# Uses exponential backoff (doubles on each retry)
RETRY_DELAY_MS=1000

# ================================================================
# BATCH PROCESSING SETTINGS
# ================================================================

# Enable Batch Processing [Optional, default: true]
# Set to false to disable batch execution features
ENABLE_BATCH=true

# Batch Size [Optional, default: 10]
# Maximum number of items to process in parallel
# Lower values reduce memory usage but increase execution time
BATCH_SIZE=10

# Batch Concurrency [Optional, default: 3]
# Maximum number of concurrent batch operations
# Adjust based on API rate limits and system resources
BATCH_CONCURRENCY=3

# ================================================================
# DEVELOPMENT SETTINGS
# ================================================================

# Development Mode [Optional, default: false]
# When true, enables additional logging and error details
# WARNING: May expose sensitive information - only use in development
DEV_MODE=false

# Skip SSL Certificate Verification [Optional, default: false]
# Only for development with self-signed certificates
# WARNING: NEVER use in production - creates security vulnerability
SKIP_SSL_VERIFY=false

# Debug Mode [Optional, default: false]
# Enables verbose debugging output
# Useful for troubleshooting but creates large log files
DEBUG=false

# ================================================================
# FEATURE FLAGS
# ================================================================

# Enable Experimental Features [Optional, default: false]
# Enables bleeding-edge features that may be unstable
ENABLE_EXPERIMENTAL=false

# Enable Telemetry [Optional, default: true]
# Sends anonymous usage data to improve the tool
# Set to false to disable all telemetry
ENABLE_TELEMETRY=true

# Enable Cache [Optional, default: true]
# Caches API responses to reduce API calls and improve performance
ENABLE_CACHE=true

# Cache TTL [Optional, default: 3600]
# Time-to-live for cached data in seconds
# Set to 0 to disable cache expiration
CACHE_TTL_SECONDS=3600

# ================================================================
# PATHS AND DIRECTORIES
# ================================================================

# Output Directory [Optional, default: ./output]
# Directory where generated skills will be saved
OUTPUT_DIR=./output

# Logs Directory [Optional, default: ./logs]
# Directory where log files will be saved
LOGS_DIR=./logs

# Cache Directory [Optional, default: ./.cache]
# Directory for cached API responses
CACHE_DIR=./.cache

# ================================================================
# MONITORING & ERROR REPORTING
# ================================================================

# Sentry DSN [Optional]
# Enable error reporting to Sentry for production monitoring
# Leave empty to disable Sentry integration
# Get your DSN from: https://sentry.io
# SENTRY_DSN=

# Sentry Environment [Optional, default: development]
# Environment name for Sentry error tracking
# SENTRY_ENVIRONMENT=development

# ================================================================
# ADVANCED SETTINGS
# ================================================================

# API Base URL Override [Optional]
# Override default API endpoints for testing or custom deployments
# Leave empty to use default endpoints
# ANTHROPIC_API_URL=https://api.anthropic.com
# FIRECRAWL_API_URL=https://api.firecrawl.dev

# Rate Limit [Optional, default: 10]
# Maximum number of API requests per second
# Adjust based on your API plan limits
RATE_LIMIT_PER_SECOND=10

# User Agent [Optional]
# Custom user agent string for API requests
# Leave empty to use default
# USER_AGENT=rooskills/1.0

# ================================================================
# NOTES
# ================================================================
# 
# - Always keep your .env file secure and never commit it to git
# - The .gitignore file should include .env to prevent accidental commits
# - For production deployment, use environment-specific configurations
# - Review and update these settings based on your specific requirements
# - Some settings may require application restart to take effect
#
# For more information, see: README.md
